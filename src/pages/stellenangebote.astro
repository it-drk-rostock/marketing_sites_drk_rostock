---
import Layout from "../layouts/Layout.astro";
import Logo from "../assets/images/logo.svg";
import QrCode from "../components/qr-code.tsx";
import QueryProviderJobs from "../components/query-provider-jobs.tsx";
import { Image } from "astro:assets";
---

<Layout title="Welcome to Astro.">
  <nav class="px-4">
    <div
      class="flex flex-row items-center self-end justify-start py-4 h-[108px]"
    >
      <div
        class="flex flex-row items-center justify-end gap-4 h-full w-1/3 pr-6"
      >
        <Image src={Logo} width={192} alt="descriptive text" />
        <div class="h-full w-[2px] border-l bg-secondary-secondary"></div>
        <h1 class="font-poppins font-bold text-3xl">Rostock</h1>
      </div>
      <div class="w-1/3"></div>
      <div class="w-1/3 text-left pl-6">
        <h2 class="font-poppins text-4xl text-primary-primary t">
          Stellenangebote
        </h2>
      </div>
    </div>
  </nav>
  <main class="px-6">
    <div class="main flex mt-4 flex-col items-start gap-4">
      <QueryProviderJobs client:only />
      <div
        class="flex flex-row items-center justify-between h-[30%] w-full gap-10"
      >
        <div
          class="h-full w-1/2 flex flex-col justify-center border-2 rounded-md border-primary-secondary p-4 relative"
        >
          <h3 class="font-poppins text-2xl text-primary-primary mb-1">
            Ihr Kontakt zu uns
          </h3>
          <ul class="text-lg font-poppins text-secondary-primary">
            <li>Personalmanagement</li>
            <li>Trelleborger Stra√üe 11 18107 Rostock</li>
            <li>Tel. 0381 24 27 9-150</li>
            <li>E-Mail: personalmanagement@drk-rostock.de</li>
            <li class="flex flex-row justify-between items-start">
              <span>www.drk-rostock.de/karriere/stellenangebote.html</span>
            </li>
            <div class="absolute bottom-3 right-4">
              <QrCode
                client:only
                value="https://www.drk-rostock.de/karriere/stellenangebote.html"
              />
            </div>
          </ul>
        </div>
        <div
          class="h-full w-1/2 border-2 border-tertiary-secondary rounded-md p-4 flex flex-col items-start text-left justify-center relative"
        >
          <h3 class="font-poppins text-2xl mb-1 text-tertiary-secondary">
            Wir freuen uns auf Ihre Bewerbung!
          </h3>
          <ul class="text-lg font-poppins text-secondary-primary w-full">
            <li class="text-transparent">null</li>
            <li class="text-transparent">null</li>
            <li>Nichts Passendes dabei?</li>
            <li>Dann bewerben Sie sich gern</li>
            <li>initiativ in unserem Talent-Pool</li>
            <div class="absolute bottom-3 right-4">
              <QrCode
                client:only
                value="https://drk-rostock.dvinci-hr.com/de/jobs/40505/intro"
              />
            </div>
          </ul>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .main {
    height: calc(100vh - 88px);
  }
</style>


